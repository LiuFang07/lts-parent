<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>权限配置</h2>
        <ol class="breadcrumb">
            <li><a>权限中心</a></li>
            <li class="active"><b>权限配置</b></li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h3><span class="text-navy">权限配置（管理员）</span></h3>
                </div>
                <div class="ibox-content">
                    <form method="post" id="form" class="form-horizontal" onsubmit="return false">
                        <div class="form-group" style="display:none;">
                            <label class="col-sm-2 control-label">ID</label>

                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="id" hidden="hidden"
                                       placeholder="" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">用户名</label>

                            <div class="col-sm-3">
                                <input type="text" class="form-control" name="username" value="$username"
                                       placeholder="" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">原密码<strong style="color: red;">*</strong></label>

                            <div class="col-sm-3">
                                <input type="text" class="form-control" name="oldPassword" value=""
                                       placeholder="输入登录时的密码">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">新密码<strong style="color: red;">*</strong></label>

                            <div class="col-sm-3">
                                <input type="text" class="form-control" name="password" value=""
                                       placeholder="建议长度大于6位">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">确认新密码<strong style="color: red;">*</strong></label>

                            <div class="col-sm-3">
                                <input type="text" class="form-control" name="password2" value=""
                                       placeholder="请输入与上面同样的密码">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-1 col-sm-offset-2" style="width:70px;">
                                <button class="btn btn-primary" type="button" id="savePass">
                                    保存
                                </button>
                            </div>
                            <div class="col-sm-1">
                                <button class="btn btn-warning" type="button" id="resetBtn">
                                    重置
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    1、管理员分配普通用户对节点的操作权限</br>
                    帐号配置对jobClient & taskTracker的配置权限。
                </div>
            </div>
        </div>
    </div>
</div>

<script id="ltstable" type="text/html">
    <table class="table table-stripped toggle-arrow-tiny footable" data-page-size="10">
        <thead>
        <tr>
            <th data-toggle="true">序号</th>
            <th>帐号名</th>
            <th>登记邮箱</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {{each rows as row index}}
        <tr>
            <td>{{row.nodeType}}</td>
            <td>{{row.name}}</td>
            <td>{{row.gmtCreated | dateFormat:'yyyy-MM-dd HH:mm:ss'}}</td>
            <td>{{row.opt | format:'optFormat',row}}</td>
        </tr>
        {{/each}}
        {{if results == 0}}
        <tr>
            <td colspan="4">暂无数据</td>
        </tr>
        {{/if}}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="4">
                <span>共{{results}}条记录，每页展示{{pageSize}}条</span>
                <ul class="pagination-sm pull-right"></ul>
            </td>
        </tr>
        </tfoot>
    </table>
</script>

<script>
    $(document).ready(function () {

        var ltsTable = $("#ltstableContainer").ltsTable({
            url: 'api/node/node-group-get',
            templateId: 'ltstable'
        });

        $(document).on("click", "#resetBtn", function () {
            $("input[name='oldPassword']").val("");
            $("input[name='password']").val("");
            $("input[name='password2']").val("");
        });

        $(document).on("click", "#savePass", function () {
            var params = {};
            $.each($('#form').parent().find(".form-control"), function () {
                var name = $(this).attr("name");
                var value = $(this).val().trim();
                params[name] = value;
            });

            if (!params['oldPassword']) {
                sweetAlert("警告", "原密码，必填", "error");
                return;
            }
            if (!params['password']) {
                sweetAlert("警告", "新密码，必填", "error");
                return;
            }
            if (!params['password2'] || params['password'] != params['password2']) {
                sweetAlert("警告", "新密码必须相同", "error");
                return;
            }

            $.ajax({
                url: '../api/safe/modify-password.do',
                type: 'POST',
                dataType: 'json',
                data: params,
                success: function (json) {
                    if (json && json.success) {
                        swal('密码修改成功');
                        $("#resetBtn").trigger("click");
                    } else {
                        if (json) {
                            swal(json['msg']);
                        }
                    }
                }
            });
        });
    });
</script>